<h3 style="margin:2rem 0;">  Productos disponibles:</h3>
{{#if verProductos}}
    
    <table class="table table-bordered border-dark" style="margin:3rem 0;">
        <thead class="thead-dark" style="background-color:aliceblue ;">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
                <th scope="col">Cantidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each verProductos}}

                <tr scope="row" id={{this._id}}>
                     
                    <td>
                            {{this.title}} 
                    </td>
                    <td>
                            {{this.price}}
                    </td>
                    <td>
                        <img src= {{this.thumbnail}}   alt= {{this.title}} style="width:3rem;">
                    </td>
                    <td>

                    </td>
                    <td>
                        <form action="/api/carrito/productos/{{this._id}}" method="post">
                            <button class="btn btn-outline-success" type="submit">Agregar</button>
                        </form> 
                    </td>
                </tr>  
            
            {{/each}}
        </tbody>
    </table>
        <a class="btn btn-outline-primary" href="/api/">Pantalla Principal</a>
        <a class="btn btn-outline-primary" href="/api/carrito">Ir al Carrito</a>      
    {{else }}
    <p style="color: red;">No hay ninguna producto :(</p>
{{/if}}

